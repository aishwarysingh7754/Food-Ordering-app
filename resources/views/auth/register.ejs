<section class="login">
    <div class="min-h-full flex items-center justify-center pt-40">
        <div class="max-w-md w-full space-y-8">
         
          <form action="/register" method="POST" class="mt-8 space-y-6" action="#" method="POST">
           
            <% if(messages.error) { %>
              <span class="text-red-500 text-sm"><%= messages.error %></span>
              <% } %>
          
            <input type="hidden" name="remember" value="true">
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="email-address" class="sr-only">Name</label>
                    <input value="<%= messages.name %>"id="email-address" name="name" type="text" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" 
                    placeholder="Name">
                  </div>
                <div>
                <label for="email-address" class="sr-only">Email address</label>
                <input value="<%= messages.email %>" id="email-address" name="email" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address">
              </div>
              <div>
                <label for="password" class="sr-only">Password</label>
                <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password">
              </div>
            </div>
      
            <!-- <div class="flex items-center justify-between">
              <div class="flex items-center">
                <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                <label for="remember-me" class="ml-2 block text-sm text-gray-900">
                  Remember me
                </label>
              </div> -->
      
           
      
            <div class="flex items-center justify-between">
              <button type="submit" class="btn-primary text-white font-bold py-2 px-4 rounded
              focus:outline-none focus:shadow-outline">
                Register
              </button>
              
                <a href="/login" class="inline-block align-baseline font-bold text-sm">
                 Already have account?
                </a>
            </div>
            </div>
          </form>
        </div>
      </div>
</section>